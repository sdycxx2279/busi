<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dingzhang.dao.UserDao">
    <resultMap id="TagList" type="Tag">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
    </resultMap>

    <select id="selectAll" resultMap="TagList">
        select * from tag
    </select>

    <select id="selectById" resultType="Tag">
        select * from tag where id=#{id}
    </select>


    <insert id="addTag" parameterType="Tag">
        <selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">
            SELECT LAST_INSERT_ID() AS id
        </selectKey>
        INSERT INTO tag (name) VALUES (#{name})
    </insert>

    <update id="updateById" parameterType="Tag">
        UPDATE tag
        SET
        name=#{name}
        WHERE id=#{id}
    </update>

    <delete id="deleteById" parameterType="int">
        DELETE FROM tag WHERE id=#{id}
    </delete>


</mapper>